// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @unique @default(uuid())
  name  String
  cpf   String @unique
  email String

  @@map("user")
}

model Order {
  id           String        @id @unique @default(uuid())
  orderStatus  OrderStatus   @default(RECEIVED) @map("order_status")
  products     Product[]
  orderPayment OrderPayment?
  date         DateTime

  @@map("order")
}

model Product {
  id              String          @id @unique @default(uuid())
  name            String
  description     String
  price           Decimal
  productCategory ProductCategory @map("product_category")
  orders          Order[]
  productImages   ProductImage[]

  @@map("product")
}

model OrderPayment {
  id            String             @id @unique @default(uuid())
  orderPaymentStatus OrderPaymentStatus @default(PENDING) @map("order_payment_status")
  orderId       String             @unique @map("order_id")
  order         Order              @relation(fields: [orderId], references: [id])

  @@map("order_payment")
}

model ProductImage {
  id       String    @id @unique @default(uuid())
  path     String
  products Product[]

  @@map("product_image")
}

enum ProductCategory {
  MEAL
  SIDE_DISH
  DRINK
  DESSERT
}

enum OrderStatus {
  RECEIVED
  PREPARING
  READY
  FINISHED
}

enum OrderPaymentStatus {
  PENDING
  PAID
}
